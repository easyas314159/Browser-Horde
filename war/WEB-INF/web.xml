  <listener>
    <listener-class>com.browserhorde.server.Configurator</listener-class>
  </listener>
  <listener>
    <listener-class>org.apache.commons.fileupload.servlet.FileCleanerCleanup</listener-class>
  </listener>
  <listener>
    <listener-class>com.browserhorde.server.DependencyInjection</listener-class>
  </listener>

  <filter>
    <filter-name>GuiceFilter</filter-name>
    <filter-class>com.browserhorde.server.IntermediateGuiceFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>GuiceFilter</filter-name>
    <url-pattern>/</url-pattern>
    <url-pattern>/jobs/*</url-pattern>
    <url-pattern>/scripts/*</url-pattern>
    <url-pattern>/tasks/*</url-pattern>
    <url-pattern>/results/*</url-pattern>
    <url-pattern>/users/*</url-pattern>
    <url-pattern>/workorders/*</url-pattern>
    <url-pattern>/benchmarks/*</url-pattern>
  </filter-mapping>
</web-app>
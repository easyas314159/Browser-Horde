<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>BrowserHoard</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>com.browserhoard.server.Configurator</listener-class>
  </listener>
  <filter>
    <display-name>ErrorTrap</display-name>
    <filter-name>ErrorTrap</filter-name>
    <filter-class>com.browserhoard.server.ErrorTrap</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ErrorTrap</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
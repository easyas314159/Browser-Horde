<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>BrowserHoard</display-name>

  <context-param>
    <param-name>HORDE_USER_AGENT</param-name>
    <param-value>Browser Horde</param-value>
  </context-param>

  <!-- BEGIN -->
  <context-param>
    <param-name>AWS_ACCESS_KEY_ID</param-name>
    <param-value>AKIAJUJV4KC43J3DSNXA</param-value>
  </context-param>
  <context-param>
    <param-name>AWS_SECRET_KEY</param-name>
    <param-value>7ucHXYnMk+lWsstJeZvactOwneLqgdxVVBbKhLHQ</param-value>
  </context-param>
  <context-param>
    <param-name>HORDE_AWS_S3_BUCKET</param-name>
    <param-value>com.browserhorde.dev</param-value>
  </context-param>
  <context-param>
    <param-name>HORDE_AWS_S3_PROXY</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>HORDE_AWS_SDB_DOMAIN_PREFIX</param-name>
    <param-value>com.browserhorde.dev</param-value>
  </context-param>
  <context-param>
    <param-name>HORDE_AWS_SES_SENDER</param-name>
    <param-value>no-reply@brainsinjars.com</param-value>
  </context-param>
  <context-param>
